<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student Data Form</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="/css/addStudent.css" />
</head>
<body>

  <form action="/api/admin/addStudent" method="POST">
    <h2>STUDENT DATA</h2>

    <div class="form-group">
      <div class="form-control">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-control">
        <label for="rollNo">Roll No</label>
        <input type="text" id="rollNo" name="rollNo" required>
      </div>
    </div>

    <div class="form-group">
      <div class="form-control">
        <label for="telugu">Telugu Marks</label>
        <input type="number" id="telugu" name="marks[telugu]" required>
      </div>
      <div class="form-control">
        <label for="english">English Marks</label>
        <input type="number" id="english" name="marks[english]" required>
      </div>
    </div>

    <div class="form-group">
      <div class="form-control">
        <label for="hindi">Hindi Marks</label>
        <input type="number" id="hindi" name="marks[hindi]" required>
      </div>
      <div class="form-control">
        <label for="maths">Maths Marks</label>
        <input type="number" id="maths" name="marks[maths]" required>
      </div>
    </div>

    <div class="form-group">
      <div class="form-control">
        <label for="science">Science Marks</label>
        <input type="number" id="science" name="marks[science]" required>
      </div>
      <div class="form-control">
        <label for="social">Social Marks</label>
        <input type="number" id="social" name="marks[social]" required>
      </div>
    </div>

    <button type="submit">Submit</button>
    <h3 class="error"></h3>
  </form>
  <script>
    $(document).ready(function () {
      <% if (typeof message !== 'undefined') { %>
        // alert("<%= message %>");
        $(".error").text("<%= message %>");
      <% } %>     
    })
  </script>

</body>
</html>
